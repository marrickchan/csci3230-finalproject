extends layout
block content
	div(class="bd-pageheader text-xs-center text-sm-left",id="register")
		div(class="container")
			h1 Register
			p(class="lead") Join the community!
			if (errorMessage)
				div= errorMessage
	div(class="container")
		form(action="/processRegistration",
			method="post",
			class="form-horizontal")

			div(class="container")
				label(class="control-label col-md-1",for="username") Username:
				div(class="col-md-4 form-group")
					input(type="text",
							 id="username",
							 name="username",
							 placeholder="Username",
							 class="form-control")

				div(class="clearfix hidden-sm-up")

				label(class="control-label col-md-1",for="email") E-Mail:
				div(class="col-md-4 form-group")
					input(type="email",
							 id="email",
							 name="email",
							 placeholder="E-Mail Address",
							 class="form-control")

				div(class="clearfix hidden-sm-up")

				label(class="control-label col-md-1",for="password") Password:
				div(class="col-md-4 form-group")
					input(type="password",
							 id="password",
							 name="password",
							 placeholder="Password",
							 class="form-control")

				div(class="clearfix hidden-sm-up")

				label(class="control-label col-md-1",for="battletag") BattleTag:
				div(class="col-md-4 form-group")
					div(class="input-group")
						input(type="text",
								 id="battletag",
								 name="battletag",
								 placeholder="BattleTag",
								 class="form-control")
						span(class="input-group-addon") #	 
						input(type="text",
								 id="identifier",
								 name="identifier",
								 placeholder="",
								 maxlength="4",
								 class="form-control")

				div(class="clearfix hidden-sm-up")


				div(class="col-md-offset-1 col-md-1")
					button(type="submit",class="btn btn-primary") Register
